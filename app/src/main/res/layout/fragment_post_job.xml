<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Employer.post_job"

    android:background="#E6E0E0">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#fff"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/keywordlay"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/keywordtxt"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:hint="Job Title"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/companylay"
                    android:layout_marginHorizontal="20dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/companytxt"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:hint="Company Name"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_countrypicker"
                    android:gravity="center_vertical">

                    <ImageView
                        android:contentDescription="flag"
                        android:id="@+id/emp_post_flag"
                        android:src="@drawable/pk"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="4dp"
                        />
                    <TextView
                        android:id="@+id/emp_post_phone_code"
                        android:text="+92"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="phone"
                        android:hint="Phone Number"
                        android:id="@+id/emp_post_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="12dp"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>
                <Spinner
                    android:id="@+id/spinner_career_id"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:gravity="center_horizontal"
                    />

                <Spinner
                    android:id="@+id/spinner_position_id"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:gravity="center_horizontal"
                    />
                <Spinner
                    android:id="@+id/spinner_country_id"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/postSalaryfrom_lay"
                        android:layout_weight="5"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/post_salaryFrom"
                            android:layout_height="50dp"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="20sp"
                            android:hint="PKR From"
                            android:textAlignment="center"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:gravity="center" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/to"
                        android:text="to"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/postSalaryto_lay"
                        android:layout_weight="5"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/post_salaryto"
                            android:layout_height="50dp"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="20sp"
                            android:hint="PKR "
                            android:textAlignment="center"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:gravity="center" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinner_salary_id"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="5"

                        />


                </LinearLayout>








            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>



</RelativeLayout>