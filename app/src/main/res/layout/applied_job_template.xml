<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appliedjobaply"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="4dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="5dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/post_timeaply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginLeft="20dp"
                android:layout_weight="5"
                android:layout_gravity="left"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/post_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableRight="@drawable/ic_favorite_border_black_"
                android:gravity="right"
                android:drawablePadding="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:textSize="16sp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_below="@id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/job_title_view_idaply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job title"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="3dp"/>
            <TextView
                android:id="@+id/company_name_view_idaply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company name"
                android:textSize="20dp"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="3dp"/>
            <TextView
                android:id="@+id/city_view_idaply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="20dp"/>
            <TextView
                android:id="@+id/salary_view_idaply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:paddingVertical="3dp"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="5dp"
                android:background="#E4E4E4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_below="@id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/chatimageviewaply"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                 android:src="@drawable/ic_message"/>
            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/videoimageviewaply"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                 android:src="@drawable/ic_videocam"/>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>