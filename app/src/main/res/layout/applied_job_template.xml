        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textAlignment="center"
                android:id="@+id/job_title_view_idaply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job title"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="3dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/company_name_view_idaply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company name"
                android:textSize="17dp"
                android:layout_marginVertical="2dp"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/city_view_idaply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="17sp"
                android:layout_marginVertical="2dp"
                android:padding="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary :"
                android:textSize="17sp"
                android:layout_marginVertical="2dp"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/salary_view_idaply"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="from:  - To: "
                android:textSize="15sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_below="@id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/chatimageviewaply"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                 android:src="@drawable/conversation"/>

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/videoimageviewaply"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                 android:src="@drawable/ic_videocam"/>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>