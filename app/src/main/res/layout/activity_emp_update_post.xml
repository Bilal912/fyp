<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employer.EmpUpdatePostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_gradient"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_keywordlay"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_job_title_id"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:hint="Job Title"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"

                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_companylay"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_company_name_id"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:hint="Company Name"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_company_email_lay"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_company_email_id"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:hint="Email"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_comp_location_lay"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_company_locat_txt"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:hint="City"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_company_Address_lay"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_company_address_txt"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:hint="Company Address"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_company_phone_lay"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_emp_post_phone"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:hint="Company Contact"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_company_educat_lay"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_spinner_career_id"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:hint="Education"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_company_position_lay"
                android:layout_marginHorizontal="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_spinner_position_id"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:hint="No of Positions"
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>





             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:weightSum="10">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/update_post_postSalaryfrom_lay"
                    android:layout_weight="7"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/update_post_post_salaryFrom"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:hint="Salary : PKR From"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/update_post_to"
                    android:text="to"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/update_post_postSalaryto_lay"
                     app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/update_post_post_salaryto"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:hint="PKR "
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_post_jobtype_lay"
                 app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/update_post_job_type_radio"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:hint="Post Type "
                    android:textAlignment="center"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/describe"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/calibri"
                />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/update_post_post_Describion"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:maxLines="50"
                android:textSize="16sp"
                android:background="@drawable/lg_button"
                android:textColor="#000000"
                android:layout_marginHorizontal="20dp"
                android:padding="10dp"
                />

            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/post_update_btn"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Update Post"
                android:textColor="#ffffff"
                android:fontFamily="@font/gotham"
                android:textSize="18sp"
                android:layout_marginBottom="60dp"
                app:button_cornerRadius="20dp"
                android:onClick="updatePost"
                />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>