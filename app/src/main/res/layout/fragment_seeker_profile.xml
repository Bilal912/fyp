<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Seeker.SeekerProfileFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/colorPrimary"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/tempy"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        >
        <EditText
            android:id="@+id/seeker_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/gotham"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/ready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_below="@id/tempy"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Email :"
                 android:padding="5dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/seeker_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:padding="20dp"
                 android:layout_marginTop="10dp"
                android:background="@drawable/lg_button"

                android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password :"
                    android:padding="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/seeker_profile_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:padding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lg_button"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone #"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/seeker_profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:padding="20dp"
                    android:background="@drawable/lg_button"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qualification :"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/seeker_profile_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="qualification"
                    android:padding="20dp"
                    android:background="@drawable/lg_button"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Gender :"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/seeker_profile_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:padding="20dp"
                    android:background="@drawable/lg_button"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/seeker_profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:padding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lg_button"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"/>

                <com.skydoves.elasticviews.ElasticButton
                    app:button_duration="250"
                    app:button_scale="0.87"
                    android:id="@+id/seeker_update_profile_btn"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Update Profile"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/gotham"
                    android:textSize="18sp"
                    app:button_cornerRadius="20dp"
                    />


            </LinearLayout>

            </ScrollView>


        </androidx.cardview.widget.CardView>



</RelativeLayout>