<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seeker.seeker_register">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/textview_border"
                android:backgroundTint="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_arrow"
                android:layout_margin="8dp"
                android:onClick="back"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/tempy"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tempy"
        >
    <androidx.cardview.widget.CardView
                android:id="@+id/ready"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/border_gradient"
                    android:padding="20dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/name"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:fontFamily="@font/gotham"
                            android:drawablePadding="10dp"
                            android:textSize="16sp"
                            android:hint="Name"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailsi"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/email"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:fontFamily="@font/gotham"
                            android:drawablePadding="10dp"
                            android:textSize="16sp"
                            android:hint="Email"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:layout_height="wrap_content"
                            android:text="Qualification :"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/calibri"
                            />
                        <Spinner
                            android:id="@+id/spinner_id"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        app:errorEnabled="true" >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/address"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:fontFamily="@font/gotham"
                            android:drawablePadding="10dp"
                            android:textSize="16sp"
                            android:hint="Address"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/countrypicker"
                        android:gravity="center_vertical">

                        <ImageView
                            android:contentDescription="flag"
                            android:id="@+id/flag"
                            android:src="@drawable/pk"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="4dp"
                            />
                        <TextView
                            android:id="@+id/phone_code"
                            android:text="+92"
                            android:textSize="16sp"
                            android:fontFamily="@font/gotham"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:inputType="phone"
                            android:fontFamily="@font/gotham"
                            android:hint="Phone Number"
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:background="@drawable/lg_button"
                            android:layout_marginLeft="8dp" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true"
                        android:id="@+id/passwordsi">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/gotham"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="Password"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Gender"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/calibri"
                        />

                    <RadioGroup
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/gender_radio"
                        >
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textColor="#000000"
                            android:fontFamily="@font/gotham"
                            android:id="@+id/male"
                            />
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textColor="#000000"
                            android:fontFamily="@font/gotham"
                            android:id="@+id/female"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="wrap_content"
                            android:text="Others"
                            android:textColor="#000000"
                            android:fontFamily="@font/gotham"
                            android:id="@+id/others"/>

                    </RadioGroup>

                    <com.skydoves.elasticviews.ElasticButton
                        app:button_duration="250"
                        app:button_scale="0.87"
                        android:id="@+id/register"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:text="Register"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/gotham"
                        android:textSize="18sp"
                        app:button_cornerRadius="20dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>