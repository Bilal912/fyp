<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/reciever_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/reciever_messages_layout"
        android:text="receiver message here "
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"/>
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="@+id/reciever_message_text"
        android:background="@drawable/sender_messages_layout"
        android:text="sender message here "
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"/>

</RelativeLayout>