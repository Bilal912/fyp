<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="screenfrgtwo">

    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="18dp"
        android:fontFamily="@font/gotham"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/backtwo"
        />
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/frg2"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_above="@id/tempy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Jobs"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:fontFamily="@font/gotham"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's us help to apply a job. Right place to know about your Posted Jobs"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


 <!--   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="26dp"
        android:layout_gravity="bottom|end"
        android:paddingTop="100dp"
        android:clickable="true"
        android:focusable="true"
        /> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tempy"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dot"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:background="@drawable/onscreen_button_border"
            android:layout_marginBottom="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/gotham"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/nexttwo"
            />
    </LinearLayout>


</RelativeLayout>