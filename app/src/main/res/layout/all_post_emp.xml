<?xml version="1.0" encoding="utf-8"?>
    <com.skydoves.elasticviews.ElasticCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:button_duration="150"
        app:button_scale="0.87"
        android:id="@+id/jobview_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_title_view_id"
                    android:layout_width="0dp"
                    android:layout_weight="70"
                    android:layout_height="wrap_content"
                    android:text="Job title"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    />

                <TextView
                    android:layout_margin="2dp"
                    android:id="@+id/post_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="09:00 PM"
                    android:layout_weight="30"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="11sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/leby"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll1"
                android:orientation="horizontal"
                >
                <View
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    />
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/company_name_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company name"
                    android:textSize="16dp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/city_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="16sp"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary :"
                    android:textSize="16sp"
                    android:padding="5dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/salary_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="from:  - To: "
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_below="@id/leby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                     android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="5dp"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/candidate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candidate"
                     android:layout_marginRight="20dp"
                     android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"/>
                <com.skydoves.elasticviews.ElasticImageView
                    android:id="@+id/deleteimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_delete"
                    android:backgroundTint="@color/red_btn_bg_color"
                    android:padding="5dp"
                     android:layout_marginRight="20dp"
                     android:textSize="20dp"/>

            </LinearLayout>

        </RelativeLayout>

    </com.skydoves.elasticviews.ElasticCardView>
