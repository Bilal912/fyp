<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Employer.EmpViewPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job title"
                android:textSize="15sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/emp_view_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Title"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_educat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No of Positions"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No of Positions"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="15sp"
                android:padding="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/emp_view_post_salary_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Salary from"
                    android:textSize="17dp"
                    android:layout_weight="4.5"
                    android:padding="10dp"/>

                <TextView
                     android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/emp_view_post_salary_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Salary to"
                    android:layout_weight="4.5"
                    android:textSize="17dp"
                    android:padding="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15sp"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/emp_view_post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20dp"
                android:padding="10dp"/>


            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/post_upload"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Upload Post"
                android:textColor="#ffffff"
                android:fontFamily="@font/gotham"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                app:button_cornerRadius="20dp"
                />

            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                android:visibility="gone"
                app:button_scale="0.87"
                android:id="@+id/post_go_update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                 android:background="@drawable/border_gradient"
                android:text="Update Post"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/gotham"
                android:textSize="16sp"
                android:onClick="goUpdatebtn"
                />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>