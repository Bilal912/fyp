<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Employer.Emp_post_job"
    android:background="@color/white"
    >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/keywordlay"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    app:errorEnabled="true"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/job_title_id"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:hint="Job Title"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"

                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/companylay"
                    android:layout_marginHorizontal="20dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/company_name_id"
                        android:layout_height="50dp"
                        android:inputType="text"
                         android:textSize="16sp"
                        android:hint="Company Name"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_email_lay"
                    android:layout_marginHorizontal="20dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/company_email_id"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:hint="Email"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comp_location_lay"
                    android:layout_marginHorizontal="20dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/company_locat_txt"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:hint="City"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_Address_lay"
                    android:layout_marginHorizontal="20dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/company_address_txt"
                        android:layout_height="50dp"
                        android:inputType="text"
                         android:textSize="16sp"
                        android:hint="Company Address"
                        android:textAlignment="center"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:gravity="center" />
                </com.google.android.material.textfield.TextInputLayout>




                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_countrypicker"
                    android:gravity="center_vertical">

                    <ImageView
                        android:contentDescription="flag"
                        android:id="@+id/emp_post_flag"
                        android:src="@drawable/pk"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="4dp"
                        />
                    <TextView
                        android:id="@+id/emp_post_phone_code"
                        android:text="+92"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="phone"
                        android:hint="Phone Number"
                        android:id="@+id/emp_post_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>
                <Spinner
                    android:id="@+id/spinner_career_id"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    />

                <Spinner
                    android:id="@+id/spinner_position_id"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    />
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/postSalaryfrom_lay"
                        android:layout_weight="7"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/post_salaryFrom"
                            android:layout_height="50dp"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:hint="Salary : PKR From"
                            android:textAlignment="center"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:gravity="center" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/to"
                        android:text="to"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:layout_weight="3"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/postSalaryto_lay"
                        android:layout_weight="5"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/post_salaryto"
                            android:layout_height="50dp"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:hint="PKR "
                            android:textAlignment="center"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:gravity="center" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinner_salary_id"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="5"

                        />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What type of is it ?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                     android:textSize="18sp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/calibri"
                    />

                <RadioGroup
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                     android:id="@+id/job_type_radio"
                    >
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:text="Full time"
                        android:textColor="#000000"
                        android:fontFamily="@font/gotham"
                        android:id="@+id/fulltime"
                        />
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:text="Part time"
                        android:textColor="#000000"
                        android:fontFamily="@font/gotham"
                        android:id="@+id/parttime"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:text="Internship"
                        android:textColor="#000000"
                        android:fontFamily="@font/gotham"
                        android:id="@+id/internship"/>

                </RadioGroup>


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/describe"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/calibri"
                    />
                <EditText
                    android:layout_width="match_parent"
                     android:id="@+id/post_Describion"
                    android:layout_height="200dp"
                    android:inputType="textMultiLine"
                    android:maxLines="50"
                    android:textSize="16sp"
                    android:background="@drawable/lg_button"
                     android:textColor="#000000"
                    android:layout_marginHorizontal="20dp"
                     android:padding="10dp"
                    />

                <com.skydoves.elasticviews.ElasticButton
                    app:button_duration="250"
                    app:button_scale="0.87"
                    android:id="@+id/post_continue_btn"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Continue"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/gotham"
                    android:textSize="18sp"
                    android:layout_marginBottom="60dp"
                    app:button_cornerRadius="20dp"
                    />

            </LinearLayout>
        </ScrollView>

</RelativeLayout>